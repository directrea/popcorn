<% @page_title = "全予約一覧" %>
<h1><%= @page_title %></h1>


<% if @reservations.present? %>
    <table class ="list">
        <thead>
            <tr>
                <th>ユーザ名</th>
                <th>チケット</th>
                <th>タイトル</th>
                <th>上映日</th>
                <th>登録日</th>
            </tr>
        </thead>
        <tbody>
            <% @reservations.each do |r| %>
                <tr>
                    <td><%= r.member.user_name %></td>
                    <td><%= r.kind.kind_name %></td>
                    <td><%= r.performance.movie.title%></td>
                    <td><%= r.performance.screening_date %></td>
                    <td><%= r.created_at.strftime('%F %T') %></td>
                </tr>
            <% end %>
        </tbody>
    </table>
<% else %>
    <p>会員情報がありません。</p>
<% end %>