<%= render "shared/errors", obj: @member %>
<table class="attr">
    <tr>
        <th><%= form.label :user_name, "ユーザー名" %></th>
        <td><%= form.text_field :user_name, autocomplete: 'off' %></td>
    </tr>
    <tr>
        <th><%= form.label :full_name, "氏名" %></th>
        <td><%= form.text_field :full_name, autocomplete: 'off' %></td>
    </tr>
    <tr>
        <th>性別</th>
        <td>
        <%= form.radio_button :sex, 1 %>
        <%= form.label :sex_1, "男" %>
        <%= form.radio_button :sex, 2 %>
        <%= form.label :sex_2, "女" %>
        </td>
    </tr>
    <tr>
        <th><%= form.label :birthday, "誕生日",
                for: "member_birthday_1i" %></th>
        <td><%= form.date_select :birthday,
                start_year: 1940, end_year: Time.current.year,
                use_month_numbers: true %></td>
    </tr>
    <tr>
        <th><%= form.label :email, "メールアドレス" %></th>
        <td><%= form.text_field :email, autocomplete: 'off' %></td>
    </tr>
    <tr>
        <th><%= form.label :credit_number, "クレジット番号" %></th>
        <td><%= form.text_field :credit_number, autocomplete: 'off' %></td>
    </tr>
    <tr>
        <th><%= form.label :expiration_date, "有効期限" %></th>
        <td><%= form.text_field :expiration_date, autocomplete: 'off' %></td>
    </tr>
    <tr>
        <th><%= form.label :authentication_number, "認証コード" %></th>
        <td><%= form.text_field :authentication_number, autocomplete: 'off' %></td>
    </tr>
    <% if @member.new_record? %>
        <tr>
            <th><%= form.label :password, "パスワード"%></th>
            <td><%= form.text_field :password, autocomplete: 'off' %></td>
            </tr>
            
        <% if controller.kind_of?(MembersController) %>
            <tr>
            <th><%= Member.human_attribute_name(:administrator) %></th>
                <td>
                    <%= form.check_box :administrator %>
                    <%= form.label :administrator %>
                </td>
            </tr>
        <% end %>
    <% end %>
</table>