<% @page_title = "予約一覧" %>
<h1><%= @page_title %></h1>

    <% @reservations.each do |r| %>
        <table class="attr">
            <tr>
                <th>タイトル</th>
                <td><%= r.performance.movie.title  %></td>
            </tr>
            <tr>
                <th>上映日</th>
                <td><%= r.performance.screening_date %></td>
            </tr>
            <tr>
                <th>上映時間</th>
                <td><%= r.performance.start_time.strftime("%H:%M")+"~"+r.performance.end_time.strftime("%H:%M") %></td>
            </tr>
            <tr>
                <th>席</th>
                <td>
                    <% r.seats.each do |s| %>
                        <%= s.en_number+"-"+s.number %>
                    <% end %>
                </td>
            </tr>
            <tr>
                <th>チケット種別</th>
                <td><%= r.kind.kind_name+" ￥#{r.kind.fee}" %></td>
            </tr>
            <tr>
                <th>予約日時</th>
                <td><%= r.created_at.strftime('%F %T') %></td>
            </tr>
        </table>
    <% end %>
